<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<VBox spacing="15"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/13"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aplicacao.configuracoes"
      prefWidth="250" prefHeight="300">
      
    <!-- Campos de configuração -->
    <TextField fx:id="ciclosField"      promptText="Ciclos (número)"/>
    <TextField fx:id="focoField"        promptText="Duração do foco (min)"/>
    <TextField fx:id="pausaCurtaField"  promptText="Pausa curta (min)"/>
    <TextField fx:id="pausaLongaField"  promptText="Pausa longa (min)"/>

    <!-- Checkboxes -->
    <VBox spacing="5" alignment="CENTER">
        <CheckBox fx:id="autoCicloCheck" text="Iniciar próximo ciclo automaticamente"/>
        <CheckBox fx:id="sempreVisivelCheck" text="Manter janela sempre visível"/>
    </VBox>

    <!-- Botões -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Salvar" onAction="#salvar"/>
        <Button text="Cancelar" onAction="#voltar"/>
    </HBox>

</VBox>