<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<VBox spacing="15"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/13"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aplicacao.configuracoes"
      prefWidth="250" prefHeight="300">
    
    <TextField promptText="Duração do foco (min)"/>
    <TextField promptText="Pausa curta (min)"/>
    <TextField promptText="Pausa longa (min)"/>
    <TextField promptText="Número de ciclos até pausa longa"/>

    <VBox spacing="5" alignment="CENTER">
        <CheckBox text="Iniciar próximo ciclo automaticamente"/>
        <CheckBox text="Manter janela sempre visível"/>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Salvar" onAction="#salvar"/>
        <Button text="Cancelar" onAction="#voltar"/>
    </HBox>

</VBox>